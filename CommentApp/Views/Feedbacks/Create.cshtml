@model CommentApp.Models.Feedback

@{
    ViewData["Title"] = "Create";
}



<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="User" class="control-label" hidden></label>
                <input type="hidden"  asp-for="User" class="form-control" value="@User.Identity.Name" readonly />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">   
            <div>
                <button type="button" onclick="location.href='@Url.Action("Index", "Feedbacks")'">
                    Filter
                </button>
            </div>     
    </div>
</div>


    


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
